<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
	<TextView
	    android:id="@+id/drawer_text_entry"
	    android:background="@drawable/selection_selector"
		android:layout_width="fill_parent"
		android:textSize="18sp"
		android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
		android:layout_height="wrap_content" />
	
	<LinearLayout
	    android:id="@+id/drawer_spacer"
	    android:layout_width="20dp"
	    android:layout_height="wrap_content"
        android:layout_below="@+id/drawer_text_entry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
	    android:orientation="vertical" />
	
	<LinearLayout
	    android:id="@+id/drawer_custom_container"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/drawer_spacer"
        android:layout_below="@+id/drawer_text_entry"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
	    android:orientation="vertical" />
</RelativeLayout>
